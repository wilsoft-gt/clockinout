#:kivy 2.0.0

<UserAdminUpdateTimestampLayout>:
    cols: 1
    padding: (20,10)
    spacing: 20
    minimum_height: 10
    height: (10,10)

    Label:
        id: title_label
        text: "Update Timestamp"
        font_size: 40
        size_hint_y: 0.5
        bold: True
        color: "#666AAD"


    #search grid
    GridLayout:
        cols: 3
        spacing: 10
        size_hint_y: None
        row_default_height: 30
        row_force_default: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Label:
            id: user_id_label
            text: "User ID"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        Label:
            id: date_label
            text: "Date"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        Label:
            id: empty_label

        TextInput:
            id: user_id_field
            hint_text: "EID123456"
            valign: "center"
            halign: "left"
            multiline: False
            write_tab: False

        TextInput:
            id: date_field
            hint_text: "12/08/2021"
            valign: "center"
            halign: "left"
            multiline: False
            write_tab: False

        Button:
            text: "Search"
            background_color: "#878DFA"
            on_press: root.get_timestamp_data(args, user_id_field, date_field, user_name_input, [clock_in, clock_out, late, too_early, exception, exception_description], message)

    #input menu grid
    GridLayout:
        cols: 2
        spacing: 10
        size_hint_y: 3
        row_default_height: 30
        row_force_default: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Label:
            id: user_name_label
            text: "User"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        TextInput:
            id: user_name_input
            name: "user_name_input"
            disabled: True

        Label:
            id: clock_in_label
            text: "Clock_in"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        TextInput:
            id: clock_in
            mame: "clock_in"
            on_text: root.update_new_data(self, self.text)

        Label:
            id: clock_out_label
            text: "Clock_out"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        TextInput:
            id: clock_out
            name: "clock_out"
            on_text: root.update_new_data(self, self.text)

        Label:
            id: late_label
            text: "Late"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        TextInput:
            id: late
            name: "late"
            on_text: root.update_new_data(self, self.text)

        Label:
            id: too_early_label
            text: "Too Early"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        TextInput:
            id: too_early
            name: "too_early"
            on_text: root.update_new_data(self, self.text)

        Label:
            id: exception_label
            text: "Exception"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        TextInput:
            id: exception
            name: "exception"
            on_text: root.update_new_data(self, self.text)

        Label:
            id: exception_description_label
            text: "Exception description"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"

        TextInput:
            id: exception_description
            name: "exception_description"
            on_text: root.update_new_data(self, self.text)

    #bottom buttons
    GridLayout:
        cols: 3
        spacing: 10
        row_default_height: 30
        row_force_default: True
        pos_hint: (0.5,0.5)

        Button:
            text: "Cancel"
            on_press: root.go_back()
            background_color: "#878DFA"

        Label:
            id: message
            color: "green"

        Button:
            text: "Save"
            on_press: root.save_new_data(date_field, message)
            background_color: "#878DFA"
        