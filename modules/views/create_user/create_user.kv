#:kivy 2.0.0

<UserAdminCreateUserLayout>:
    cols: 1
    padding: (20,10)
    spacing: 40
    minimun_height: 10
    height: (10,10)

    Label:
        text: "Create user"
        font_size: 40
        bold: True
        color: "#666AAD"

    GridLayout:
        cols: 2
        spacing: 10
        size_hint_y: 5
        row_default_height: 40
        row_force_default: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Label:
            text: "First Name"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        TextInput:
            id: first_name
            hint_text: "John"
            name: "First name"
            multiline: False
            write_tab: False

        Label:
            text: "Last Name"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        TextInput:
            id: last_name
            hint_text: "Doe"
            name: "Last name"
            multiline: False
            write_tab: False
        
        Label:
            text: "EID"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        TextInput:
            id: eid
            hint_text: "EID123456"
            name: "Eid"
            multiline: False
            write_tab: False

        Label:
            text: "Is admin"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        TextInput:
            id: is_admin
            hint_text: "(1 = YES / 0 = NO)"
            name: "Is admin"
            multiline: False
            write_tab: False

        Label:
            text: "Clock In time"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        TextInput:
            id: clock_in_time
            hint_text: "7:00AM"
            name: "Clock in time"
            multiline: False
            write_tab: False

        Label:
            text: "Clock Out time"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        TextInput:
            id: clock_out_time
            hint_text: "17:00PM"
            name: "Clock out time"
            multiline: False
            write_tab: False

        Label:
            text: "Password"
            color: "#878dfa"
            size_hint_x: None
            width: 100
            text_size: self.size
            valign: "center"
            halign: "left"
        
        TextInput:
            id: password
            hint_text: "yourpassword!123"
            name: "Password"
            multiline: False
            write_tab: False

    GridLayout:
        cols: 3
        spacing: 10
        row_default_height: 30
        row_force_default: True
        post_hint: (0.5,0.5)

        Button:
            text: "Cancel"
            on_press: root.go_back(args)
            background_color: "#878dfa"
        
        Label:
            id: message_label


        Button:
            text: "Save"
            on_press: root.save_new_data([first_name, last_name, eid, password, clock_in_time, clock_out_time, is_admin], message_label)
            background_color: "#878dfa"


        